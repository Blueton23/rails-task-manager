<h1>My tasks</h1>
<% @tasks.each do |t| %>
  <div>
    <input type="checkbox" name="cbx-task" id="cbx-task" <%= 'checked' if t.completed == true  %>>
    <label for="cbx-task"><%= link_to t.title, task_path(t) %></label>
    <%= link_to "Delete", task_path(t), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>
<%= link_to 'create a new task', tasks_new_path %>
